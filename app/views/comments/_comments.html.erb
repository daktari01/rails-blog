<h3>Comments</h3>
<% @post.comments.each do |comment| %>
    <div class="well">
        <p><strong><%= comment.username %></strong>: <%= comment.body %></p>
        <%= link_to '[X]', [comment.post, comment], 
                                        method: :delete,
                                        data: {confirm: 'Do you really want to delete this comment?'} %>
    </div>
<% end %>